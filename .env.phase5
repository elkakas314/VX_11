# VX11 Feature Flags Configuration
# Place this in .env or docker-compose.override.yml

# ============= PHASE 2: Power Windows =============
VX11_POWER_WINDOWS_ENABLED=1
VX11_POWER_WINDOWS_CORE_MODE=0
VX11_POWER_WINDOWS_TIMEOUT_SEC=30
VX11_POWER_WINDOWS_TTL_CHECK_INTERVAL=1

# ============= PHASE 3: E2E Conductor =============
VX11_E2E_CONDUCTOR_ENABLED=1
VX11_E2E_CONDUCTOR_CPU_THROTTLE_THRESHOLD=75
VX11_E2E_CONDUCTOR_MEMORY_THROTTLE_THRESHOLD=80

# ============= PHASE 4: Autofix Conductor =============
VX11_AUTOFIX_ENABLED=1
VX11_AUTOFIX_MAX_CYCLES=3
VX11_DEEPSEEK_API_TOKEN=""  # Set if enabling autofix

# ============= PHASE 5: INEE + Manifestator =============
# **ALL OFF by default**

# Hormiguero INEE
VX11_INEE_ENABLED=0
VX11_INEE_FORWARD_ENABLED=0
VX11_INEE_CPU_QUOTA_ENABLED=0
VX11_INEE_AUTONOMOUS_SCALING_ENABLED=0
VX11_INEE_NAMESPACE_PREFIX=hormiguero_inee

# Manifestator
VX11_MANIFESTATOR_EMIT_INTENT_ENABLED=0
VX11_MANIFESTATOR_BUILD_DIRECT_DISABLED=1  # ALWAYS enforced

# ============= Logging & Audit =============
VX11_LOG_LEVEL=INFO
VX11_AUDIT_ENABLED=1
VX11_FORENSIC_ENABLED=1

# ============= Authentication =============
VX11_TOKEN=vx11-local-token
VX11_TENTACULO_LINK_TOKEN=vx11-local-token
