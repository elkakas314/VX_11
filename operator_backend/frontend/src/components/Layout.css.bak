/* Layout Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    --bg: #0f0f0f;
    --surface: #1a1a1a;
    --border: #333;
    --text: #e0e0e0;
    --accent: #00d9ff;
    --success: #00ff00;
    --error: #ff3333;
    --warning: #ffaa00;
}

body {
    background-color: var(--bg);
    color: var(--text);
    font-family: 'Courier New', monospace;
    font-size: 14px;
}

.layout {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
}

.layout-header {
    background: var(--surface);
    border-bottom: 1px solid var(--border);
    padding: 1rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.layout-header h1 {
    color: var(--accent);
    font-size: 1.5rem;
}

.nav {
    display: flex;
    gap: 1.5rem;
}

.nav a {
    color: var(--text);
    text-decoration: none;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    transition: all 0.2s;
}

.nav a:hover {
    background: var(--border);
    color: var(--accent);
}

.layout-main {
    flex: 1;
    padding: 2rem;
    overflow-y: auto;
}

/* Cards */
.card {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 4px;
    padding: 1rem;
    margin-bottom: 1rem;
}

.card-title {
    color: var(--accent);
    font-weight: bold;
    margin-bottom: 0.5rem;
}

/* Messages */
.message {
    background: var(--border);
    border-left: 3px solid var(--accent);
    padding: 1rem;
    margin-bottom: 0.5rem;
    border-radius: 2px;
}

.message.user {
    border-left-color: var(--success);
}

.message.assistant {
    border-left-color: var(--accent);
}

/* Buttons */
.btn {
    background: var(--accent);
    color: var(--bg);
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    cursor: pointer;
    font-weight: bold;
    transition: all 0.2s;
}

.btn:hover {
    opacity: 0.8;
    transform: scale(1.02);
}

.btn-secondary {
    background: var(--border);
    color: var(--text);
}

/* Input */
input,
textarea {
    background: var(--border);
    color: var(--text);
    border: 1px solid var(--border);
    padding: 0.5rem;
    border-radius: 4px;
    font-family: inherit;
    font-size: inherit;
}

input:focus,
textarea:focus {
    outline: none;
    border-color: var(--accent);
    background: #2a2a2a;
}

/* Grid */
.grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
    margin-bottom: 1rem;
}

.grid-item {
    background: var(--surface);
    border: 1px solid var(--border);
    padding: 1rem;
    border-radius: 4px;
}

.status-ok {
    color: var(--success);
}

.status-error {
    color: var(--error);
}

.status-warning {
    color: var(--warning);
}